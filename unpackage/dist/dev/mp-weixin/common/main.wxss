	height: 16rpx;
	background: #f2f2f2;
}
/* 顶部导航栏样式 */
.navHolder{
	height: 90rpx;
	line-height: 90rpx;
	background: #fff;
}
.title-text{
	font-size: 36rpx;
	color: #000000;
}
/* 底部导航栏 */
.navBar{
	padding-top: 20rpx;
	height: 110rpx;
	background: #fff;
}
.navBar image{
	width: 46rpx;
	height: 46rpx;
}
.navBar text{
	font-size: 22rpx;
	color: #474A56;
	display: block;
}
/* swiper通用样式 */
.imageContainer {
	width: 100%;
	height: 325rpx;
}
.swiperitem {
	height: 255rpx;
	padding: 0rpx 20rpx;
	box-sizing: border-box;
	position: relative;
}
.itemImg {
	position: absolute;
	width: 95%;
	/* height: 380rpx; */
	height: 280rpx;
	border-radius: 15rpx;
	z-index: 5;
	opacity: 0.7;
	top: 5%;
	box-shadow:0px 4rpx 15rpx 0px rgba(153,153,153,0.24);
}
.swiperactive {
	width: 95%;
	opacity: 1;
	z-index: 10;
	height: 320rpx;
	top: 0%;
	-webkit-transition: all .2s ease-in 0s;
	transition: all .2s ease-in 0s;
}
/* 状态栏背景色 */
.status_bar {
	height: 25px;
	width: 100%;
	position: fixed;
	top:0;
	left: 0;
	background: #FFF;
	z-index: 999;
}
