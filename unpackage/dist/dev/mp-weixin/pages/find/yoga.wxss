
.containerYoga{
	padding-left: 50rpx;
	padding-right: 50rpx;
}
.yogaImg{
	width: 100%;
	height: 362rpx;
	border-radius: 20rpx;
}
.motionTag text{
	margin-left: 1em;
	color: #5a5a5a;
	font-size: 32rpx;
}
.motionTag text:first-child{
	margin-left: 0;
}
.effect text{
	color: #474A56;
	margin-left: 1em;
}
.effect text:first-child{
	margin-left: 0;
}
.effect-right{
	display: inline-block;
	width: calc(100% - 5em);
	text-align: right;
}

