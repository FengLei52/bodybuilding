
.coachInfo{
	height: 746rpx;
	background: #314D8F;
	border-radius: 10rpx;
	overflow: hidden;
	margin-bottom: 20rpx;
}
.coachUser{
	margin: 70rpx 0;
	text-align: center;
}
.coachUser image{
	width: 248rpx;
	height: 248rpx;
	border-radius: 50%;
	margin: 0 auto 10rpx;
}
.coachTag{
	overflow: hidden;
}
.coachTag text{
	font-size: 24rpx;
	display: inline-block;
	padding: 8rpx 24rpx;
	color: #ccd4ff;
	border: 1rpx solid #ccd4ff;
	border-radius: 22rpx;
	margin-left: 46rpx;
	margin-bottom: 32rpx;
}
.coachTitle::before{
	content: '';
	display: inline-block;
	width: 12rpx;
	height: 46rpx;
	background: #3B5BA0;
	border-radius: 8rpx;
	margin-right: 8rpx;
}
.coachTitleText{
	font-size: 36rpx;
	color: #5a5a5a;
	font-weight: 500;
}
.contentPack{
	padding: 30rpx 0;
}
.undergo{
	font-size: 28rpx;
	color: #8f8f8f;
}
.undergo::before{
	font-family: iconfont;
	content: '\E60B';
	font-size: 34rpx;
	color: #3B5BA0;
	position: absolute;
}
.widePadding{
	padding-left: 1.2em;
	display: inline-block;
	width: calc(100% - 48rpx);
}
.iconSite{
	padding: 0 20rpx;
}
.shopImg{
	width: 148rpx;
	height: 148rpx;
	border-radius: 12rpx;
}
.orderBtn{
	width: 394rpx;
	height: 90rpx;
	line-height: 90rpx;
	padding: 0;
	background: #3B5BA0;
	color: #fff;
	border-radius: 50rpx;
}

