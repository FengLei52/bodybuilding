
.hotTitle{
	padding:0 24rpx 20rpx;
	color: #5a5a5a;
	font-weight: 500;
}
.right-em{
	margin-right: 1em;
}
.dateSelect-item{
	margin-left: 22rpx;
	background: #f1f4fd;
	padding: 16rpx 0;
	border-radius: 6rpx;
}
.dateSelect-item:first-child text{
	color: #F96D1B!important;
}
.dateSelect-item:last-child{
	margin-right: 22rpx;
}
.dateSelect-item text:nth-child(1){
	font-size: 32rpx;
	color: #395493;
}
.dateSelect-item text:nth-child(2){
	font-size: 22rpx;
	color: #8f8f8f;
	margin-top: 6rpx;
}
.coachItem{
	margin-top: 70rpx;
	height: 304rpx;
	border-radius: 8rpx;
}
.coachImg{
	float: left;
	width: 176rpx;
	height: 176rpx;
	padding: 22rpx;
	margin-top: -60rpx;
}
.coachImg image{
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
.coachInfo{
	float: left;
	padding-left: 22rpx;
	box-sizing: border-box;
}
.coachName{
	height: 96rpx;
	line-height: 96rpx;
	color: #fff;
	font-size: 36rpx;
}
.coachLabel{
	font-size: 24rpx;
	color: rgba(255,255,255,0.82);
}
.coachTag{
	padding: 6rpx 14rpx;
	border-radius: 22rpx;
	background: #fff;
	font-size: 24rpx;
	margin-left: 22rpx;
}
.tagTop{
	position: relative;
	top: 18rpx;
}

